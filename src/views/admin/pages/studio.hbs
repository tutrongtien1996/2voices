  <div class="popup_view modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header contai_header position-relative">
        <div class="close_popup"> 
            <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
      </div>

      <!-- Modal body -->
        <div class="modal-body">
            <div class="w-100 p-2 border top_popup text-center">
                <h5 class="modal-title text-white">Thông tin</h5>
            </div>
            <div class="row p-2 border gx-0">
                <div class="col">
                    <ul>
                        <li><div class="d-flex"><p class="fw-bold me-3 ">ID:</p><p class="view_id"></p></div></li>
                        <li><div class="d-flex"><p class="fw-bold me-3 ">Tiêu đề:</p><p class="view_title"></p></div></li>
                        <li><div class="d-flex"><p class="fw-bold me-3 ">Số ký tự:</p><p class="view_number_chars"></p></div></li>
                    </ul>
                </div>
                <div class="col">
                    <ul>
                        <li><div class="d-flex"><p class="fw-bold me-3">Giọng đọc:  </p><p class="view_voice_name"></p></div></li>
                        <li><div class="d-flex"><p class="fw-bold me-3">Tốc độ:  </p><p>1.0x</p></div></li>
                        <li><div class="d-flex"><p class="fw-bold me-3">Âm lượng:  </p><p>100%</p></div></li>
                    </ul>
                </div>
            </div>
            <div class="border py-2 px-3">
                <h6 class="fw-bold">Nội dung</h6>
                <p class="view_content_text"></p>
            </div>
        </div>  
    </div>
  </div>
</div>




